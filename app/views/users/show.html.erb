  <div class="col-md-4 col-md-push-4">
    <h4 class="user_show">為了能確認您的近況，請盡可能完善您的個人資料</h4>

    <%= form_for @user, :url => update_profile_path do |f|%>

      <%#= hidden_field_tag "from", params[:from] %>

      <div class="form-group">
        <%= f.label "真實姓名" %> <br>
        <%= f.text_field :name, :value => @user.name, :class => "form-control"  %>
      </div>
      <div class="form-group">
        <%= f.label "行動電話" %> <br>
        <%= f.text_field :phone, :value => @user.phone, :class => "form-control"  %>
      </div>
      <div class="form-group">
        <%= f.label "室內電話" %> <br>
        <%= f.text_field :home_phone, :value => @user.home_phone, :class => "form-control"  %>
      </div>
      <div class="form-group">
      <%= f.label "Email" %> <br>
      <%= f.text_field :email, :value => @user.email, :type => "email", :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "地址" %> <br>
        <%= f.text_field :address, :value => @user.address, :class => "form-control"  %>
      </div>

      <%= f.submit "更新個人資料", :class => "btn btn-primary pull-right" %>
    <% end %>

  </div>


